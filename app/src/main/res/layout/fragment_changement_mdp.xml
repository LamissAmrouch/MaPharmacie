<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ChangementMdpFragment"
                                                   android:id="@+id/frameLayout5" android:background="@drawable/back6">


    <EditText
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/nouveauMdp1"
            android:textSize="15sp" android:hint="Saisir le nouveau mot de passe" android:fontFamily="@font/aclonica"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="14dp" app:layout_constraintTop_toTopOf="@+id/guideline17"
            android:layout_marginBottom="14dp" app:layout_constraintBottom_toTopOf="@+id/guideline18"
            app:layout_constraintVertical_bias="0.523" android:layout_width="0dp"
            android:textAlignment="center" android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/nouveauMdp2"
            android:textSize="15sp" android:fontFamily="@font/aclonica"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="14dp"
            android:hint="Confirmer le nouveau mot de passe" app:layout_constraintTop_toTopOf="@+id/guideline18"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline19"
            app:layout_constraintVertical_bias="0.0" android:textAlignment="center"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/ancienMdp"
            android:textSize="16sp" android:hint="Saisir l'ancien mot de passe" android:fontFamily="@font/aclonica"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="@+id/guideline16" android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline17" app:layout_constraintVertical_bias="0.0"
            android:textAlignment="center" android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>
    <TextView
            android:text="Veuillez changer votre mot de passe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:fontFamily="@font/aclonica"
            android:textSize="20sp" android:textColor="#68C49D" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold" android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="@+id/guideline8"
            app:layout_constraintHorizontal_bias="0.482" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline16" app:layout_constraintVertical_bias="0.0"
            android:textAlignment="center"/>
    <Button
            android:text="Confirmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="20dp"
            android:id="@+id/confirmChgMdp"
            android:textAllCaps="false" android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/aclonica" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/nouveauMdp2"
            app:layout_constraintBottom_toTopOf="@+id/guideline20"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline8" app:layout_constraintGuide_begin="16dp"
                                                android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline16" app:layout_constraintGuide_begin="116dp"
                                                android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline17" app:layout_constraintGuide_begin="192dp"
                                                android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline18" app:layout_constraintGuide_begin="258dp"
                                                android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline19" app:layout_constraintGuide_begin="325dp"
                                                android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline20" app:layout_constraintGuide_begin="416dp"
                                                android:orientation="horizontal"/>
</androidx.constraintlayout.widget.ConstraintLayout>